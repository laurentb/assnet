#!/usr/bin/env python
# -*- coding: utf-8 -*-
# vim: ft=python et softtabstop=4 cinoptions=4 shiftwidth=4 ts=4 ai

from ass2m.server import Server

if __name__ == '__main__':
    import sys
    if len(sys.argv) > 1:
        server = Server(sys.argv[1])
        server.bind('0.0.0.0', 8042)
    else:
        print 'Usage: %s <rootdir>' % sys.argv[0]
        sys.exit(1)
